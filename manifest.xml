<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">
  <Id>b7f16e50-9b74-4dbd-81f3-d69d8f9f9464</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>YourProviderName</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="External Email Warning"/>
  <Description DefaultValue="Warns when sending emails to external recipients."/>
  <IconUrl DefaultValue="https://testingtenant.github.io/outlook-addin/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://testingtenant.github.io/outlook-addin/assets/icon-64.png"/>
  <SupportUrl DefaultValue="https://your-support-url.com"/>
  <AppDomains>
    <AppDomain>https://testingtenant.github.io</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.3"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://testingtenant.github.io/outlook-addin/basic.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadCmdGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="TaskpaneButtonLabel"/>
                  <Supertip>
                    <Title resid="TaskpaneButtonTitle"/>
                    <Description resid="TaskpaneButtonDescription"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon16"/>
                    <bt:Image size="32" resid="Icon32"/>
                    <bt:Image size="80" resid="Icon80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="TaskpaneUrl"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon16" DefaultValue="https://testingtenant.github.io/outlook-addin/assets/icon-16.png"/>
        <bt:Image id="Icon32" DefaultValue="https://testingtenant.github.io/outlook-addin/assets/icon-32.png"/>
        <bt:Image id="Icon80" DefaultValue="https://testingtenant.github.io/outlook-addin/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="TaskpaneUrl" DefaultValue="https://testingtenant.github.io/outlook-addin/basic.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="External Email Warning"/>
        <bt:String id="TaskpaneButtonLabel" DefaultValue="Show Warning"/>
        <bt:String id="TaskpaneButtonTitle" DefaultValue="External Email Warning"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButtonDescription" DefaultValue="Shows a warning if email recipients are external."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
