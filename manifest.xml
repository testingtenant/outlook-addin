<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp">
    <Id>b7f16e50-9b74-4dbd-81f3-d69d8f9f9464</Id>
    <Version>1.0.0.0</Version>
    <ProviderName>Bizwind</ProviderName>
    <DefaultLocale>en-US</DefaultLocale>
    <DisplayName>External Email Checker</DisplayName>
    <Description>Warns if email is being sent to an external recipient.</Description>
    <IconUrl>https://github.com/testingtenant/outlook-addin/raw/main/icon.png</IconUrl>
    <SupportsSharedFolders>false</SupportsSharedFolders>

    <Hosts>
        <Host Name="Mailbox" />
    </Hosts>

    <Requirements>
        <Sets DefaultMinVersion="1.3">
            <Set Name="Mailbox" />
        </Sets>
    </Requirements>

    <FormSettings>
        <Form xsi:type="ItemSend">
            <DesktopSettings>
                <SourceLocation DefaultValue="https://testingtenant.github.io/outlook-addin/basic.html" />
            </DesktopSettings>
        </Form>
    </FormSettings>

    <Permissions>ReadWriteMailbox</Permissions>

    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
        <Requirements>
            <bt:Sets DefaultMinVersion="1.3">
                <bt:Set Name="Mailbox" />
            </bt:Sets>
        </Requirements>
        <Hosts>
            <Host xsi:type="MailHost">
                <DesktopFormFactor>
                    <ExtensionPoint xsi:type="MessageReadCommandSurface">
                        <OfficeTab id="TabDefault">
                            <Group id="msgComposeCmdGroup">
                                <Label resid="CommandsGroup.Label"/>
                                <Control xsi:type="Button" id="msgComposeInsertGist">
                                    <Label resid="TaskpaneButton.Label"/>
                                    <Supertip>
                                        <Title resid="TaskpaneButton.SupertipTitle"/>
                                        <Description resid="TaskpaneButton.SupertipText"/>
                                    </Supertip>
                                    <Icon>
                                        <bt:Image size="16" resid="Icon.16x16"/>
                                        <bt:Image size="32" resid="Icon.32x32"/>
                                        <bt:Image size="80" resid="Icon.80x80"/>
                                    </Icon>
                                    <Action xsi:type="ShowTaskpane">
                                        <SourceLocation resid="Taskpane.Url"/>
                                    </Action>
                                </Control>
                            </Group>
                        </OfficeTab>
                    </ExtensionPoint>
                </DesktopFormFactor>
            </Host>
        </Hosts>
        <Resources>
            <bt:Images>
                <bt:Image id="Icon.16x16" DefaultValue="https://github.com/testingtenant/outlook-addin/raw/main/icon-16.png"/>
                <bt:Image id="Icon.32x32" DefaultValue="https://github.com/testingtenant/outlook-addin/raw/main/icon-32.png"/>
                <bt:Image id="Icon.80x80" DefaultValue="https://github.com/testingtenant/outlook-addin/raw/main/icon-80.png"/>
            </bt:Images>
            <bt:Urls>
                <bt:Url id="Taskpane.Url" DefaultValue="https://testingtenant.github.io/outlook-addin/basic.html"/>
            </bt:Urls>
            <bt:ShortStrings>
                <bt:String id="CommandsGroup.Label" DefaultValue="Email Checker"/>
                <bt:String id="TaskpaneButton.Label" DefaultValue="External Email Warning"/>
                <bt:String id="TaskpaneButton.SupertipTitle" DefaultValue="External Email Checker"/>
            </bt:ShortStrings>
            <bt:LongStrings>
                <bt:String id="TaskpaneButton.SupertipText" DefaultValue="Warns if email is being sent to an external recipient."/>
            </bt:LongStrings>
        </Resources>
    </VersionOverrides>
</OfficeApp>
